---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
import { ClientRouter } from "astro:transitions";
---

<html
  lang="es"
  x-data="{ 
    theme: localStorage.getItem('theme') || 'light',
    language: localStorage.getItem('language') || 'es'
  }"
  x-init="
    $watch('theme', value => {
      localStorage.setItem('theme', value);
      document.body.classList.toggle('dark-mode', value === 'dark');
    });
    $watch('language', value => {
      localStorage.setItem('language', value);
      document.documentElement.lang = value;
    });
    // Aplicar el tema inicial
    document.body.classList.toggle('dark-mode', theme === 'dark');
    document.documentElement.lang = language;
  "
  :class="{ 'dark-mode': theme === 'dark' }"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Marcelo Aguirre - Desarrollador Full Stack</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Alpine.js -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="mt-8 mb-6 text-center w-full px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Marcelo Aguirre
      </h1>
      <h2 class="text-xl md:text-2xl font-medium mb-6 text-gray-600 dark:text-gray-300">
        <span x-show="language === 'es'">Desarrollador Fullstack</span>
        <span x-show="language === 'en'">Full Stack Developer</span>
      </h2>
      <nav class="mb-8">
        <ul class="flex gap-4 md:gap-6 justify-center text-base font-medium items-center">
          <li>
            <a
              href="https://www.linkedin.com/in/cheloxyz"
              target="_blank"
              rel="noopener"
              aria-label="LinkedIn"
              class="text-2xl transition-all duration-300 flex items-center gap-2 p-3 rounded-xl hover:scale-110"
            >
              <i class="fab fa-linkedin"></i>
            </a>
          </li>
          <li>
            <a
              href="https://github.com/cheloxyz"
              target="_blank"
              rel="noopener"
              aria-label="GitHub"
              class="text-2xl transition-all duration-300 flex items-center gap-2 p-3 rounded-xl hover:scale-110"
            >
              <i class="fab fa-github"></i>
            </a>
          </li>
          <li>
            <a
              href="https://t.me/chelo_xyz"
              target="_blank"
              rel="noopener"
              aria-label="Telegram"
              class="text-2xl transition-all duration-300 flex items-center gap-2 p-3 rounded-xl hover:scale-110"
            >
              <i class="fab fa-telegram"></i>
            </a>
          </li>
          <li>
            <a
              href="mailto:me@chelo.xyz"
              aria-label="Email"
              class="text-2xl transition-all duration-300 flex items-center gap-2 p-3 rounded-xl hover:scale-110"
            >
              <i class="fas fa-envelope"></i>
            </a>
          </li>
          <li>
            <button
              @click="language = language === 'es' ? 'en' : 'es'"
              class="text-2xl transition-all duration-300 flex items-center gap-2 p-3 rounded-xl hover:scale-110"
              :title="language === 'es' ? 'Switch to English' : 'Cambiar a Español'"
            >
              <span x-text="language === 'es' ? '🇺🇸' : '🇪🇸'" class="transition-all duration-300"></span>
            </button>
          </li>
        </ul>
      </nav>
    </header>
    <main class="flex flex-col items-center flex-1 w-full px-4 pb-20">
      <slot />
      <Analytics />
    </main>
    <button
      id="toggle-mode"
      aria-label="Cambiar modo claro/oscuro"
      class="fixed bottom-6 right-6 z-50 w-14 h-14 rounded-full shadow-lg flex items-center justify-center text-2xl transition-all duration-300 hover:scale-110"
      @click="theme = theme === 'dark' ? 'light' : 'dark'"
    >
      <span x-text="theme === 'dark' ? '☀️' : '🌙'" class="transition-transform duration-300"></span>
    </button>
  </body>
</html>
